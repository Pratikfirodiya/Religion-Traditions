<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        app:strokeColor="#cdcdcd"
        android:layout_height="1200dp">
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/approve"
            app:strokeWidth="1dp"
            android:layout_marginLeft="340dp"
            app:cornerRadius="5dp"
            app:strokeColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:iconTint="@color/black"
            android:minWidth="0dp"
            android:layout_marginTop="970dp"
            app:icon="@drawable/ic_outline_done_outline_24"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/reject"
            android:layout_height="50dp"
            app:strokeWidth="1dp"
            app:cornerRadius="5dp"
            android:layout_marginRight="300dp"
            android:layout_marginLeft="10dp"
            app:strokeColor="@color/black"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:minWidth="0dp"
            app:iconTint="@color/black"
            android:layout_marginTop="970dp"
            app:icon="@drawable/ic_outline_cancel_24"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/typename_check"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:text="dvc"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="80dp"
            android:background="@drawable/rondedtextview"
            android:backgroundTint="#cdcdcd"
            android:layout_marginTop="385dp"
            android:layout_marginLeft="10dp"
            android:text="Description"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="30dp"/>
        <TextView
            android:layout_width="60dp"
            android:background="@drawable/rondedtextview"
            android:backgroundTint="#cdcdcd"
            android:layout_marginTop="635dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="Steps"
            android:layout_height="30dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="35dp"
    android:layout_height="match_parent"
    tools:context=".CheckArticlesActivity">
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    app:cardCornerRadius="20dp"
    android:layout_margin="20dp"
    android:layout_height="300dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/imgurl"
        android:layout_height="match_parent"
                 />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#cdcdcd"
        android:layout_marginTop="370dp"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="40px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lato"
                android:scaleType="centerCrop"
             />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#cdcdcd"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="620dp"
        android:layout_height="300dp">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/step1"
                android:textSize="40px"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="hello"
                android:layout_marginTop="10dp"

                android:layout_height="150dp"
                android:minLines="2"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:text="hello"
                android:textSize="40px"
                android:id="@+id/step2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
              android:layout_marginTop="50dp"

                android:layout_height="150dp"
                android:minLines="2"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="hello"
                android:textSize="40px"
                android:id="@+id/step3"
                android:layout_marginTop="130dp"
                android:layout_height="150dp"
                android:minLines="2"
                android:contentDescription="TODO" />
            <TextView
                android:layout_width="match_parent"
                android:scaleType="centerCrop"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/step4"
                android:textSize="40px"
                android:text="hello"
                android:layout_marginTop="230dp"
                android:layout_height="150dp"
                android:minLines="2" />

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.core.widget.NestedScrollView>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlbg"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_scrollFlags="scroll|enterAlways"
            android:minHeight="?attr/actionBarSize"
            android:background="#596e7f"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toolbar Title"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_bold"
                android:textSize="25sp"
                android:layout_gravity="start"
                android:id="@+id/toolbar_title" />



        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:indeterminate="true"
        android:layout_width="wrap_content"
        android:id="@+id/progressindicator"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        app:indeterminateAnimationType="contiguous" />

</RelativeLayout>
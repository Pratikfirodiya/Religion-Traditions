            android:supportsPictureInPicture="true" />
        <activity android:name=".Navigationdrawer.DrawerActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".AuthenticationActivities.ForgotPasswordActivity" />
        <activity android:name=".AuthenticationActivities.MobileLoginActivity" />
        <activity android:name=".AuthenticationActivities.GetOtpActivity" />
        <activity android:name=".Religionselec" />
